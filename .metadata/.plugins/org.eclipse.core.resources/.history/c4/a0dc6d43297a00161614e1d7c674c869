package general;

public  class Celda {

	protected double x;
	protected double y;
	protected String path;
	
	public Celda(int x,int y){
		this.x=x;
		this.y=y;
		path="";
	}
	
	public double getX(){
		return x;
	}
	
	public double getY(){
		return y;
	}
	
	public void moverX(double x){
		this.x+=x;
	}
	
	public void moverY(double d){
		this.y+=d;
	}
	
	public void setPath(char c){
		switch(c){
		
		case'e': {	path= "C:/Users/tomas/Documents/GitHub/ProyectoTDP2016ATG/CiudadDeBatalla/src/Aplicacion/Jugador1.png";
					break;}
		case'l': {break;}
		case' ': {break;}
		case'a': {break;}
		case'w': {break;}
		case'b': {break;}
		case'x': {break;}
		case'j': {break;}
		}
	}
	
}
